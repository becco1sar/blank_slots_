[Unit]
Description=Service will run blank slot script to determine if a blank slot is detected or not
After=network.target

[Service]
Type=simple
User=ccplayer
Group=sudo
WorkingDirectory=/opt/script/blank_slot/
ExecStart=/usr/bin/python3 /opt/script/blank_slot/blank_slot.py
Restart=on-failure

[Install]
WantedBy=multi-user.target